<h1>Listing guests</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Company</th>
    <th>Email</th>
    <th>Twitter</th>
    <th>Tags</th>
    <th>Printed</th>
    <th colspan=3>Actions</th>
  </tr>

<% @guests.each do |guest| %>
  <tr>
    <td><%=h guest.name %></td>
    <td><%=h guest.company %></td>
    <td><%=h guest.email %></td>
    <td>@<a href="http://twitter.com/<%=h guest.twitter %>"><%=h guest.twitter %></a></td>
    <td><%=h guest.tags %></td>
    <td><%=h guest.printed %></td>
    
    <td><%= link_to 'Show', guest %></td>
    <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
    <td><%= link_to 'Destroy', guest, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New guest', new_guest_path %>